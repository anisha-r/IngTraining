package com.hcl.ecommerce.service;

import org.springframework.stereotype.Service;

import com.hcl.ecommerce.dto.StoreReviewDto;

@Service
public class StoreReviewServiceImpl implements StoreReviewService{



		@Override
		public String storeReview(StoreReviewDto storeReviewDto) {
			 int[] arr = {storeReviewDto.getUserId()};
		        int rating = storeReviewDto.getRating();
		        for(int i=0; i<arr.length; i++){
		        	rating = rating + arr[i];
		        }
		        /* arr.length returns the number of elements 
		         * present in the array
		         */
		        int average = rating / arr.length;
		        /* This is used for displaying the formatted output
		         * if you give %.4f then the output would have 4 digits
		         * after decimal point.
		         */
		        System.out.format("The average is: %.3f", average);
				return "OverAll Rating is " +average;
		    }
			
		}


